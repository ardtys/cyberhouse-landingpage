---
import { Icon } from 'astro-icon/components';
import type { FooterLink } from '~/types';
import '../styles/footer.css'

const links: Array<FooterLink> = [
	{
		url: 'https://www.instagram.com/cyberhouse.id?igsh=NDZxa3hlcjQxY3ht',
		description: '',
		icon: 'fa-brands:instagram',
	},
	{
		url: 'https://discord.com/invite/4NhxAkph',
		description: '',
		icon: 'fa-brands:discord',
	},
	{
		url: 'https://www.linkedin.com/company/cyber-house/mycompany/',
		description: '',
		icon: 'fa-brands:linkedin',
	},
];
---

<footer class="relative h-10 items-center justify-center">
	<center>
		<div>
			<center>
				<ul class="flex gap-5 object-center justify-center ">
					{
						links.map((link) =>
							link.icon == 'mdi:home' ? (
								<a
									class="group flex size-14 items-center justify-center rounded-full border-2 border-white p-4 hover:border-[#fab520] hover:text-[#fab520]"
									href={link.url}>
									<Icon
										class="size-full group-hover:text-[#fab520]"
										name={link.icon}
									/>
								</a>
							) : (
								<a
									class="group flex size-14 items-center justify-center rounded-full border-2 border-white p-4 hover:border-[#fab520] hover:text-[#fab520]"
									href={link.url}
									target="_blank">
									<Icon
										class="size-full group-hover:text-[#fab520]"
										name={link.icon}
									/>
								</a>
							)
						)
					}
				</ul>
			</center>
		</div>
		<div>
			
				<p class="m-[3rem] text-gray-400 pb-[2rem]" id="copyright" style="font-family: 'Poppins'" >cyber-house.id Â© 2024 </i></p>
			
		</div>
	</center>
</footer>
