---

<ContentSection id='' title='ROADMAP TO CYBER SECURITY V1.0' >
	<section class="timeline-section">
		<div class="timeline-items">
			{
                kurikulums.map(kurikulum => (
                    <div class="timeline-item" >
                        <div class="timeline-dot"></div>
                        <div class="timeline-date">{kurikulum.lesson}</div>
                        <div class="timeline-content">
                            <h3>{kurikulum.title}</h3>
                            <p class="text-left">
                                {kurikulum.description}
                                <br /><br/>
                                {kurikulum.materis.map(materi => (
                                  <div class="text-left flex text-green-600 gap-3">
                                    <Icon name="charm:circle-tick" size="25" />
                                    <p>{materi}</p>
                                  </div>
                                ))}
                            </p>
                        </div>
                    </div>
                ))
            }
			</div>
	</section>

</ContentSection>